{
  "id": "${KC_REALM_NAME}",
  "realm": "${KC_REALM_NAME}",
  "sslRequired": "none",
  "enabled": true,
  "clients": [
    {
      "id": "vault",
      "clientId": "vault",
      "name": "vault",
      "enabled": true,
      "publicClient": true,
      "rootUrl": "${VAULT_URL}",
      "adminUrl": "${VAULT_URL}",
      "baseUrl": "${VAULT_URL}",
      "redirectUris": [
        "${VAULT_URL}/*"
      ],
      "webOrigins": [
        "${VAULT_URL}"
      ]
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "app-a-owner",
        "description": "Application A owner role"
      },
      {
        "name": "app-b-owner",
        "description": "Application B owner role"
      },
      {
        "name": "vault-admin",
        "description": "Vault administrator"
      }
    ]
  },
  "users": [
    {
      "id": "${VAULT_ADMIN_USERNAME}",
      "email": "${VAULT_ADMIN_USERNAME}@demo.com",
      "username": "${VAULT_ADMIN_USERNAME}",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "temporary": false,
          "type": "password",
          "value": "${VAULT_ADMIN_PASSWORD}"
        }
      ],
      "realmRoles": [
        "vault-admin"
      ]
    },
    {
      "id": "johnwick",
      "email": "johnwick@demo.com",
      "username": "johnwick",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "temporary": false,
          "type": "password",
          "value": "passw0rd"
        }
      ],
      "realmRoles": [
        "app-a-owner"
      ]
    },
    {
      "id": "steverogers",
      "email": "steverogers@demo.com",
      "username": "steverogers",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "temporary": false,
          "type": "password",
          "value": "passw0rd"
        }
      ],
      "realmRoles": [
        "app-b-owner"
      ]
    }
  ]
}